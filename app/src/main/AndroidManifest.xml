<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pfeiffer.expenses"
    android:versionCode="2"
    android:versionName="1.2">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityRecordPurchase"
            android:label="@string/title_activity_record_purchase"></activity>
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityPieChart"
            android:label="@string/title_activity_activity_pie_chart"></activity>

        <service android:name="com.pfeiffer.expenses.utility.UpdatePurchaseTemplates" />

        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityShareData"
            android:label="@string/title_activity_activity_share_data"></activity>
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityBluetoothDevices"
            android:label="@string/title_activity_activity_bluetooth_devices"></activity>
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityShopping"
            android:label="@string/title_activity_activity_shopping"></activity>
        <activity
            android:name="com.pfeiffer.expenses.activity.ActivityShoppingRecordPurchase"
            android:label="@string/title_activity_activity_shopping_record_purchase"
            android:theme="@android:style/Theme.Dialog"></activity>
    </application>

</manifest>
